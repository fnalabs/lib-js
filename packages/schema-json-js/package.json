{
  "name": "schema-json-js",
  "version": "1.0.6",
  "description": "A JavaScript Schema class that implements the JSON Schema specification as immutable objects with lazy, async initialization and optimized validations using closures and thunks.",
  "keywords": [
    "json",
    "JSON",
    "jsonschema",
    "json-schema",
    "json-schema-validator",
    "json-schema-validation",
    "schema",
    "validate",
    "validation",
    "validator"
  ],
  "main": "index.js",
  "scripts": {
    "prebuild": "del dist",
    "build": "tsc --build ../../tsconfig.json",
    "build:watch": "tsc --build ../../tsconfig.json --watch",
    "dev": "npm run build:watch & npm run test:watch",
    "document": "jsdoc --configure .jsdoc.json --verbose",
    "postdocument": "sed -i 's/Documentation/schema-json-js/g' ../../../schema-json-js/docs/index.html ../../../schema-json-js/docs/Schema.html",
    "fix": "ts-standard --fix -p ../../tsconfig.json",
    "lint": "ts-standard -p ../../tsconfig.json",
    "release": "npm test && npm run build",
    "postrelease": "npm run document",
    "pretest": "del coverage",
    "test": "ts-standard -p ../../tsconfig.json",
    "posttest": "cross-env NODE_ENV=test jest --env=node --colors --coverage 'tst/unit'",
    "test:watch": "cross-env NODE_ENV=test jest --env=node --colors --coverage --watch 'tst/unit'",
    "test:all": "cross-env NODE_ENV=production jest --env=node --colors 'tst/**/*.spec.js'",
    "version": "npm run release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fnalabs/lib-js.git",
    "directory": "packages/schema-json-js"
  },
  "bugs": {
    "url": "https://github.com/fnalabs/lib-js/issues"
  },
  "homepage": "https://fnalabs.github.io/schema-json-js/",
  "author": "Adam Eilers",
  "license": "MIT",
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "devDependencies": {
    "@types/jest": "29.5.1",
    "cross-env": "7.0.3",
    "del-cli": "5.0.0",
    "jest": "29.5.0",
    "ts-jest": "29.1.0",
    "ts-standard": "12.0.2",
    "typescript": "5.0.4"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/config.ts",
      "!src/**/*.d.ts",
      "!tst/**/*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        "tsconfig.json"
      ]
    }
  },
  "ts-standard": {
    "ignore": [
      "dist/",
      "docs/",
      "lib/",
      "tmp*"
    ]
  },
  "volta": {
    "extends": "../../package.json"
  }
}
